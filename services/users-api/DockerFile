FROM golang:1.22 AS build
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o server ./cmd/server


# Runtime
FROM gcr.io/distroless/base-debian12
WORKDIR /app
ENV GIN_MODE=release
COPY --from=build /app/server /app/server
EXPOSE 8080
CMD ["/app/server"]